[variables]
include-file = ${env:HOME}/.config/polybar/variables

[colors]
background = ${xrdb:background}
background-alt = #444
foreground = ${xrdb:foreground}
foreground-alt = #555
primary = ${xrdb:color2}
secondary = ${xrdb:color4}
alert = ${xrdb:color1}
mode = ${xrdb:color3}

[bar/top]
width = 100%
height = 32
line-size = 4
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = ${variables.font-noto}
font-1 = ${variables.font-awesome-free}
font-2 = ${variables.font-awesome-brands}
modules-left = ${variables.modules-left}
modules-center = ${variables.modules-center}
modules-right = ${variables.modules-right}
module-margin = 1

[module/i3]
type = internal/i3
label-mode-padding = 1
label-mode-foreground = ${colors.mode}
label-focused-underline= ${colors.primary}
label-focused-padding = 1
label-visible-padding = 1
label-unfocused-padding = 1
label-urgent-padding = 1

[module/title]
type = internal/xwindow

[module/cpu]
type = internal/cpu
format =  <label>
label = %percentage:02%%

[module/ram]
type = internal/memory
format =  <label>
label = %percentage_used:02%%

[module/disk]
type = internal/fs
mount-0 = /
label-mounted =  %percentage_used:02%%

[module/wifi]
type = internal/network
interface = wlp1s0
format-connected =  <label-connected>
format-disconnected = 
label-connected = %essid%
label-disconnected = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
format-charging =  <label-charging>
format-charging-underline = ${colors.primary}
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.alert}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/fcitx]
type = custom/script
exec = ~/.config/polybar/fcitx
tail = true
format =  <label>

[module/date]
type = internal/date
date = %a %d-%b
time = %H:%M
label = %time% %date%
format =  <label>
